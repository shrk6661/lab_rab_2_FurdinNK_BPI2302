<Window x:Class="lab_rab_2_FurdinNK_BPI2302.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно программы"
        Height="650"
        Width="750"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10">

        <!-- Формула 1 -->
        <RadioButton x:Name="rbFormula1" GroupName="Formulas" Margin="0,5">
            <StackPanel>
                <Image Source="Resources/formula1.png" Width="250" Height="35" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="a = " VerticalAlignment="Center"/>
                        <TextBox x:Name="txtA1" Width="60" Height="20" Text="1,0" Margin="5,0"/>
                        <TextBlock Text="f = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbF1" Width="70" Height="22" SelectedIndex="0" Margin="5,0">
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 2 -->
        <RadioButton x:Name="rbFormula2" GroupName="Formulas" Margin="0,5">
            <StackPanel>
                <Image Source="Resources/formula2.png" Width="250" Height="35" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="a = " VerticalAlignment="Center"/>
                        <TextBox x:Name="txtA2" Width="60" Height="20" Text="1,0" Margin="5,0"/>
                        <TextBlock Text="b = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtB2" Width="60" Height="20" Text="1,0" Margin="5,0"/>

                        <TextBlock Text="f = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbF2" Width="70" Height="22" SelectedIndex="0" Margin="5,0">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="30"/>
                            <ComboBoxItem Content="40"/>
                            <ComboBoxItem Content="50"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 3 -->
        <RadioButton x:Name="rbFormula3" GroupName="Formulas" Margin="0,5">
            <StackPanel>
                <Image Source="Resources/formula3.png" Width="200" Height="35" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="a = " VerticalAlignment="Center"/>
                        <TextBox x:Name="txtA3" Width="60" Height="20" Text="1,0" Margin="5,0"/>
                        <TextBlock Text="b = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtB3" Width="60" Height="20" Text="1,0" Margin="5,0"/>
                        <TextBlock Text="c = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbC3" Width="60" Height="22" Margin="5,0" SelectedIndex="0">
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                        </ComboBox>
                        <TextBlock Text="d = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbD3" Width="60" Height="22" Margin="5,0" SelectedIndex="1">
                            <ComboBoxItem Content="-1"/>
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 4 -->
        <RadioButton x:Name="rbFormula4" GroupName="Formulas" Margin="0,5">
            <StackPanel>
                <Image Source="Resources/formula4.png" Width="220" Height="45" Margin="0,0,10,0"/>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Параметры:" FontWeight="Bold" Margin="0,13"/>
                    <StackPanel Orientation="Horizontal" Margin="10,10">
                        <TextBlock Text="a = " VerticalAlignment="Center"/>
                        <TextBox x:Name="txtA4" Width="60" Height="20" Text="1,0" Margin="5,0"/>
                        <TextBlock Text="c = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbC4" Width="60" Height="22" Margin="5,0" SelectedIndex="1">
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        <TextBlock Text="d = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtD4" Width="60" Height="20" Text="3" Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 5 -->
        <RadioButton x:Name="rbFormula5" GroupName="Formulas" Margin="0,5">
            <StackPanel>
                <Image Source="Resources/formula5.png" Width="250" Height="35" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="x = " VerticalAlignment="Center"/>
                        <TextBox x:Name="txtX5" Width="60" Height="20" Text="1,0" Margin="5,0"/>
                        <TextBlock Text="y = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtY5" Width="60" Height="20" Text="1,0" Margin="5,0"/>
                        <TextBlock Text="N = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbN5" Width="60" Height="22" SelectedIndex="0" Margin="5,0">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        <TextBlock Text="K = " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbK5" Width="60" Height="22" SelectedIndex="0" Margin="5,0">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>


        <Button x:Name="btnCalculate"
                Content="Считать"
                Width="100"
                Height="30"
                FontSize="14"
                HorizontalAlignment="Center"
                Margin="0,15"
                Click="BtnCalculate_Click"
                Background="LightBlue"/>

        <Border BorderBrush="Gray" BorderThickness="1" Background="White" Padding="10">
            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtResult"
                           Text="Выберите формулу и нажмите 'Считать'"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="11"/>
            </ScrollViewer>
        </Border>

    </StackPanel>
</Window>