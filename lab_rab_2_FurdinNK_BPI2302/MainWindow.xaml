<Window x:Class="lab_rab_2_FurdinNK_BPI2302.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно программы"
        Height="650"
        Width="750"
        MinHeight="600"
        MinWidth="700"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Стили для RadioButton -->
        <Style x:Key="FormulaRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderBrush" Value="DarkBlue"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style x:Key="ParameterTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Стили для ComboBox -->
        <Style x:Key="ParameterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>

        <!-- Стиль для кнопки с градиентом -->
        <Style x:Key="GradientButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="DarkBlue"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF4DA6FF" Offset="0"/>
                                <GradientStop Color="#FF0066CC" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF0066CC" Offset="0"/>
                                <GradientStop Color="#FF004C99" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для TextBlock параметров -->
        <Style x:Key="ParameterLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
        </Style>

        <!-- Стиль для сообщений об ошибках -->
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

    </Window.Resources>

    <StackPanel Margin="10" Background="White">

        <!-- Формула 1 -->
        <RadioButton x:Name="rbFormula1" GroupName="Formulas" 
                     Style="{StaticResource FormulaRadioButtonStyle}">
            <StackPanel>
                <Image Source="Resources/formula1.png" Width="250" Height="35" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" Style="{StaticResource ParameterLabelStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="a = " Style="{StaticResource ParameterLabelStyle}"/>
                        <TextBox x:Name="txtA1" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="f = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbF1" SelectedIndex="0" Style="{StaticResource ParameterComboBoxStyle}">
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 2 -->
        <RadioButton x:Name="rbFormula2" GroupName="Formulas" 
                     Style="{StaticResource FormulaRadioButtonStyle}">
            <StackPanel>
                <Image Source="Resources/formula2.png" Width="250" Height="35" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" Style="{StaticResource ParameterLabelStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="a = " Style="{StaticResource ParameterLabelStyle}"/>
                        <TextBox x:Name="txtA2" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="b = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtB2" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="f = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbF2" SelectedIndex="0" Style="{StaticResource ParameterComboBoxStyle}">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="30"/>
                            <ComboBoxItem Content="40"/>
                            <ComboBoxItem Content="50"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 3 -->
        <RadioButton x:Name="rbFormula3" GroupName="Formulas" 
                     Style="{StaticResource FormulaRadioButtonStyle}">
            <StackPanel>
                <Image Source="Resources/formula3.png" Width="200" Height="35" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" Style="{StaticResource ParameterLabelStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="a = " Style="{StaticResource ParameterLabelStyle}"/>
                        <TextBox x:Name="txtA3" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="b = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtB3" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="c = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbC3" Margin="5,0" SelectedIndex="0" Style="{StaticResource ParameterComboBoxStyle}">
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                        </ComboBox>
                        <TextBlock Text="d = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbD3" Margin="5,0" SelectedIndex="1" Style="{StaticResource ParameterComboBoxStyle}">
                            <ComboBoxItem Content="-1"/>
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 4 -->
        <RadioButton x:Name="rbFormula4" GroupName="Formulas" 
                     Style="{StaticResource FormulaRadioButtonStyle}">
            <StackPanel>
                <Image Source="Resources/formula4.png" Width="220" Height="45" Margin="0,0,10,0"/>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Параметры:" Style="{StaticResource ParameterLabelStyle}" Margin="0,13"/>
                    <StackPanel Orientation="Horizontal" Margin="10,10">
                        <TextBlock Text="a = " Style="{StaticResource ParameterLabelStyle}"/>
                        <TextBox x:Name="txtA4" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="c = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbC4" Margin="5,0" SelectedIndex="1" Style="{StaticResource ParameterComboBoxStyle}">
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        <TextBlock Text="d = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtD4" Text="3" Style="{StaticResource ParameterTextBoxStyle}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <!-- Формула 5 -->
        <RadioButton x:Name="rbFormula5" GroupName="Formulas" 
                     Style="{StaticResource FormulaRadioButtonStyle}">
            <StackPanel>
                <Image Source="Resources/formula5.png" Width="250" Height="50" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Параметры:" Style="{StaticResource ParameterLabelStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="x = " Style="{StaticResource ParameterLabelStyle}"/>
                        <TextBox x:Name="txtX5" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="y = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <TextBox x:Name="txtY5" Text="1,0" Style="{StaticResource ParameterTextBoxStyle}"/>
                        <TextBlock Text="N = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbN5" SelectedIndex="0" Style="{StaticResource ParameterComboBoxStyle}">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                            <ComboBoxItem Content="10"/>
                        </ComboBox>
                        <TextBlock Text="K = " Style="{StaticResource ParameterLabelStyle}" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cmbK5" SelectedIndex="0" Style="{StaticResource ParameterComboBoxStyle}">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                            <ComboBoxItem Content="10"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </RadioButton>

        <Button x:Name="btnCalculate"
                Content="Считать"
                Click="BtnCalculate_Click"
                Style="{StaticResource GradientButtonStyle}">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF0080FF" Offset="0"/>
                    <GradientStop Color="#FF0066CC" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <!-- Область для сообщений об ошибках -->
        <TextBlock x:Name="txtError" Text="" Style="{StaticResource ErrorTextStyle}" Visibility="Collapsed"/>

        <Border BorderBrush="Gray" BorderThickness="1" Background="White" Padding="10">
            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtResult"
                           Text="Выберите формулу и нажмите 'Считать'"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="11"/>
            </ScrollViewer>
        </Border>

    </StackPanel>
</Window>